generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        Int      @id @default(autoincrement()) // ID do pagamento
  orderId   String   // ID do pedido (compatível com MongoDB)
  amount    Float
  method    String   @default("pix")              // Valor default do método de pagamento
  status    String
  createdAt DateTime @default(now())              
  updatedAt DateTime @updatedAt                   
}
